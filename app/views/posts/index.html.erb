<div class="new-post">
<%= form_with model: @post do |form| %>
  <%= form.text_field :message, :placeholder => "What's on your mind?" %>
  <br /><br />
  
  <%= form.label "picture" %>
    <%= form.file_field :picture, onchange:"readURL(this);" %>
